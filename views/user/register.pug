extends ../layouts/layout

block head
  title Регистрация
  link(href="css/user/register.css", rel="stylesheet")

block body
  .container(align="center")
    form.form-signin(action="/register", method="POST")
      h2.form-signin-heading(align="center") Регистрация
      input.form-control(type="text", placeholder="Фамилия", onblur="checkSurname()", name="surname", required)
      input.form-control(type="text", placeholder="Имя", onblur="checkName()", name="name" required)
      input.form-control(type="text", placeholder="Отчество", onblur="checkPatr()", name="patronymic", required)
      input.form-control(type="date", id="birth", placeholder="Дата рождения", onblur="checkBirth()", name="birth" required)
      input.form-control(type="text", placeholder="Номер паспорта", onblur="checkPassport()", name="passport", required)
      input.form-control(type="text", placeholder="Домашний адрес", onblur="checkAddress()", name="address" required)
      input.form-control(type="tel", placeholder="Номер телефона", onblur="checkTel()", name="tel", required)
      input.form-control(type="text", placeholder="Логин", onblur="checkLog()", name="log", required)
      input.form-control(type="password", placeholder="Пароль", onblur="checkPass()", name="pass", required)
      input.form-control(type="email", placeholder="E-Mail", onblur="checkEmail()", name="email", required)
      button.btn.btn-lg.btn-primary.button(type="submit") Зарегистрироваться
  include ../layouts/scripts
  script(src="/js/user/register.js")